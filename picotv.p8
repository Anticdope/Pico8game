	(plr_x>enm1_x-25 and plr_y>enm1_y-25)) then
	 if (sgn(enm1_x-plr_x)==1) then
	  enm1_x-=.5
	 end
	 if (sgn(enm1_x-plr_x)==-1) then
	  enm1_x+=.5
	 end
	  if (sgn(enm1_y-plr_y)==1) then
	  enm1_y-=.5
	 end
	 if (sgn(enm1_y-plr_y)==-1) then
	  enm1_y+=.5
	 end
	end

end
